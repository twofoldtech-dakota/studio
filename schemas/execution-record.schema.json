{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio.plugin/schemas/execution-record.schema.json",
  "title": "STUDIO Execution Record",
  "description": "Individual step execution record for the forge log",
  "type": "object",
  "required": ["step_id", "blueprint_step_ref", "status", "started_at", "action_taken"],
  "properties": {
    "step_id": {
      "type": "string",
      "pattern": "^step_[0-9]+[a-z]?$",
      "description": "The step identifier from the blueprint"
    },
    "blueprint_step_ref": {
      "type": "string",
      "pattern": "^bp_[0-9]{8}_[0-9]{6}_[a-f0-9]{4}#step_[0-9]+[a-z]?$",
      "description": "Full reference to blueprint step (format: blueprint_id#step_id)"
    },
    "step_name": {
      "type": "string",
      "description": "Human-readable name of the step"
    },
    "status": {
      "type": "string",
      "enum": ["success", "failed", "skipped", "partial"],
      "description": "Execution status of the step"
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when execution started"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when execution completed"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Execution duration in milliseconds"
    },
    "action_taken": {
      "type": "string",
      "description": "Description of the actual action performed"
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["file", "data", "state"]
          },
          "location": { "type": "string" },
          "verified": { "type": "boolean" },
          "value": {}
        }
      },
      "description": "Outputs produced by this step"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type"],
        "properties": {
          "path": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["created", "modified", "deleted"]
          },
          "size": { "type": "integer" },
          "checksum": { "type": "string" }
        }
      },
      "description": "File artifacts created or modified"
    },
    "success_criteria_results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["criterion", "passed"],
        "properties": {
          "criterion": { "type": "string" },
          "passed": { "type": "boolean" },
          "evidence": { "type": "string" },
          "error": { "type": "string" }
        }
      },
      "description": "Results of success criteria verification"
    },
    "observations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Observations made during execution"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": { "type": "string" },
          "type": { "type": "string" },
          "recoverable": { "type": "boolean" },
          "stack": { "type": "string" }
        }
      },
      "description": "Errors encountered during execution"
    },
    "replan_triggered": {
      "type": "boolean",
      "default": false,
      "description": "Whether this step triggered a replan"
    },
    "replan_details": {
      "type": "object",
      "properties": {
        "reason": { "type": "string" },
        "strategy": {
          "type": "string",
          "enum": ["local_repair", "substitution", "add_steps", "skip", "alternative_path"]
        },
        "modifications": { "type": "string" }
      },
      "description": "Details if a replan was triggered"
    }
  }
}
