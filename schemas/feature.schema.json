{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio.plugin/schemas/feature.schema.json",
  "title": "STUDIO Feature",
  "description": "Feature definition for project decomposition - represents a user capability or usable functionality",
  "type": "object",
  "required": ["id", "short_id", "name", "status", "tasks", "changelog", "created_at"],

  "properties": {
    "id": {
      "type": "string",
      "pattern": "^FEAT-[0-9]{3}$",
      "description": "Full feature identifier (e.g., FEAT-001)"
    },
    "short_id": {
      "type": "string",
      "pattern": "^F[0-9]+$",
      "description": "Short ID for CLI use (e.g., F1)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Feature name - should describe a user capability"
    },
    "description": {
      "type": "string",
      "description": "Detailed feature description including user stories"
    },
    "status": {
      "type": "string",
      "enum": ["PENDING", "IN_PROGRESS", "COMPLETE", "CANCELLED", "BLOCKED"],
      "description": "Feature status - automatically computed from tasks"
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "default": 3,
      "description": "Priority within the epic"
    },
    "parent_epic_id": {
      "type": "string",
      "pattern": "^(EPIC-[0-9]{3}|E[0-9]+)$",
      "description": "Reference to parent epic"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "short_id", "name", "status", "changelog", "created_at"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^task_[0-9]{8}_[0-9]{6}$"
          },
          "short_id": {
            "type": "string",
            "pattern": "^T[0-9]+$"
          },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["PENDING", "IN_PROGRESS", "COMPLETE", "CANCELLED", "BLOCKED"]
          },
          "priority": { "type": "integer", "minimum": 1, "maximum": 5 },
          "effort": {
            "type": "object",
            "properties": {
              "size": { "type": "string", "enum": ["XS", "S", "M", "L", "XL"] },
              "confidence": { "type": "string", "enum": ["high", "medium", "low"] },
              "actual_size": { "type": "string", "enum": ["XS", "S", "M", "L", "XL"] }
            }
          },
          "depends_on": { "type": "array", "items": { "type": "string" } },
          "blocks": { "type": "array", "items": { "type": "string" } },
          "plan_id": { "type": "string" },
          "branch": { "type": "string" },
          "actor": { "type": "string" },
          "changelog": { "type": "array" },
          "created_at": { "type": "string", "format": "date-time" },
          "started_at": { "type": "string", "format": "date-time" },
          "completed_at": { "type": "string", "format": "date-time" }
        }
      },
      "description": "Tasks within this feature (APPEND-ONLY - never delete)"
    },
    "acceptance_criteria": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Criteria that must be met for feature completion"
    },
    "user_stories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "as_a": { "type": "string" },
          "i_want": { "type": "string" },
          "so_that": { "type": "string" }
        }
      },
      "description": "User stories this feature fulfills"
    },
    "source_paths": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Codebase paths mapped to this feature during analysis"
    },
    "depends_on_features": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Feature IDs this feature depends on"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "action", "actor"],
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "action": { "type": "string" },
          "actor": { "type": "string" },
          "previous_value": {},
          "new_value": {},
          "reason": { "type": "string" }
        }
      },
      "description": "Immutable audit trail"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "When first task started"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "When all tasks completed"
    },
    "git_branch": {
      "type": "string",
      "description": "Feature branch (e.g., feature/F1-login)"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "task_count": { "type": "integer" },
        "completed_tasks": { "type": "integer" },
        "progress_percentage": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    }
  }
}
