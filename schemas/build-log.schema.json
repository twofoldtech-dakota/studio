{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio.plugin/schemas/build-log.schema.json",
  "title": "STUDIO Build Log",
  "description": "Complete build log structure containing all execution records",
  "type": "object",
  "required": ["plan_id", "task_id", "started_at", "status", "records"],
  "properties": {
    "plan_id": {
      "type": "string",
      "pattern": "^bp_[0-9]{8}_[0-9]{6}_[a-f0-9]{4}$",
      "description": "Reference to the plan being executed"
    },
    "task_id": {
      "type": "string",
      "pattern": "^task_[0-9]{8}_[0-9]{6}$",
      "description": "Reference to the parent task"
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when building started"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp when building completed"
    },
    "status": {
      "type": "string",
      "enum": ["in_progress", "complete", "failed", "aborted"],
      "description": "Overall building status"
    },
    "summary": {
      "type": "object",
      "required": ["total_steps", "completed_steps", "failed_steps", "skipped_steps"],
      "properties": {
        "total_steps": {
          "type": "integer",
          "minimum": 0
        },
        "completed_steps": {
          "type": "integer",
          "minimum": 0
        },
        "failed_steps": {
          "type": "integer",
          "minimum": 0
        },
        "skipped_steps": {
          "type": "integer",
          "minimum": 0
        },
        "replans_executed": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "records": {
      "type": "array",
      "items": {
        "$ref": "execution-record.schema.json"
      },
      "description": "Array of execution records for each step"
    },
    "replans": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["trigger", "strategy", "original_step", "timestamp"],
        "properties": {
          "trigger": { "type": "string" },
          "strategy": {
            "type": "string",
            "enum": ["local_repair", "substitution", "add_steps", "skip", "alternative_path"]
          },
          "original_step": { "type": "string" },
          "analysis": { "type": "string" },
          "modification": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["insert_step", "modify_step", "remove_step", "retry"]
              },
              "details": {}
            }
          },
          "outcome": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },
      "description": "Record of all replanning events"
    },
    "artifacts": {
      "type": "object",
      "required": ["created", "modified", "deleted"],
      "properties": {
        "created": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "step"],
            "properties": {
              "path": { "type": "string" },
              "step": { "type": "string" },
              "size": { "type": "integer" },
              "checksum": { "type": "string" }
            }
          }
        },
        "modified": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "step"],
            "properties": {
              "path": { "type": "string" },
              "step": { "type": "string" },
              "changes": { "type": "string" }
            }
          }
        },
        "deleted": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "step"],
            "properties": {
              "path": { "type": "string" },
              "step": { "type": "string" }
            }
          }
        }
      },
      "description": "Summary of all artifacts affected"
    },
    "checkpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "step", "status", "timestamp"],
        "properties": {
          "name": { "type": "string" },
          "step": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["passed", "failed"]
          },
          "timestamp": { "type": "string", "format": "date-time" },
          "verification_results": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "description": "Checkpoint verification records"
    },
    "final_state": {
      "type": "object",
      "properties": {
        "all_outputs_produced": { "type": "boolean" },
        "all_criteria_met": { "type": "boolean" },
        "ready_for_verifying": { "type": "boolean" },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
