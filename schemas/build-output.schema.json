{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://studio.plugin/schemas/build-output.schema.json",
  "title": "STUDIO Build Output",
  "description": "Consolidated execution output enabling task resumption and debugging",
  "type": "object",
  "required": [
    "version",
    "task_id",
    "plan_id",
    "goal",
    "status",
    "resume_point",
    "steps",
    "execution_summary",
    "timestamps"
  ],

  "properties": {
    "version": {
      "type": "string",
      "const": "1.0.0",
      "description": "Schema version for forward compatibility"
    },

    "task_id": {
      "type": "string",
      "pattern": "^task_[0-9]{8}_[0-9]{6}$",
      "description": "Reference to parent task"
    },

    "plan_id": {
      "type": "string",
      "pattern": "^bp_[0-9]{8}_[0-9]{6}_[a-f0-9]{4}$",
      "description": "Reference to the execution plan"
    },

    "goal": {
      "type": "string",
      "description": "Human-readable goal statement"
    },

    "status": {
      "type": "string",
      "enum": [
        "pending",
        "in_progress",
        "paused",
        "awaiting_quality_gate",
        "completed",
        "failed",
        "halted",
        "aborted"
      ],
      "description": "Overall build status"
    },

    "resume_point": {
      "type": "object",
      "required": ["can_resume", "next_step_id"],
      "description": "Exact point to resume execution",
      "properties": {
        "can_resume": {
          "type": "boolean",
          "description": "Whether this build can be resumed"
        },
        "next_step_id": {
          "type": ["string", "null"],
          "description": "Step ID to execute next (null if complete/failed)"
        },
        "next_micro_action_sequence": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "Micro-action sequence within next step (null = start from beginning)"
        },
        "last_completed_step": {
          "type": ["string", "null"],
          "description": "Last fully completed step ID"
        },
        "last_checkpoint": {
          "type": ["string", "null"],
          "description": "Name of last passed checkpoint"
        },
        "halt_reason": {
          "type": ["string", "null"],
          "description": "If halted/failed, the reason why"
        },
        "resume_instructions": {
          "type": ["string", "null"],
          "description": "Human-readable instructions for resumption"
        }
      }
    },

    "steps": {
      "type": "array",
      "items": { "$ref": "#/$defs/executedStep" },
      "description": "All steps with their execution status"
    },

    "execution_summary": {
      "type": "object",
      "required": ["total_steps", "completed_steps", "failed_steps", "skipped_steps", "pending_steps"],
      "properties": {
        "total_steps": { "type": "integer", "minimum": 0 },
        "completed_steps": { "type": "integer", "minimum": 0 },
        "failed_steps": { "type": "integer", "minimum": 0 },
        "skipped_steps": { "type": "integer", "minimum": 0 },
        "pending_steps": { "type": "integer", "minimum": 0 },
        "in_progress_steps": { "type": "integer", "minimum": 0 },
        "total_retries": { "type": "integer", "minimum": 0 },
        "quality_gate_verdict": {
          "type": ["string", "null"],
          "enum": ["STRONG", "SOUND", "UNSTABLE", "BLOCKED", null]
        },
        "duration_ms": { "type": ["integer", "null"], "minimum": 0 }
      }
    },

    "quality_gate_results": {
      "type": ["object", "null"],
      "description": "Results of quality gate checks if executed",
      "properties": {
        "executed_at": { "type": "string", "format": "date-time" },
        "verdict": { "type": "string", "enum": ["STRONG", "SOUND", "UNSTABLE", "BLOCKED"] },
        "checks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "passed"],
            "properties": {
              "name": { "type": "string" },
              "command": { "type": "string" },
              "passed": { "type": "boolean" },
              "required": { "type": "boolean" },
              "output": { "type": "string" },
              "error": { "type": "string" },
              "duration_ms": { "type": "integer" }
            }
          }
        }
      }
    },

    "artifacts": {
      "type": "object",
      "description": "All artifacts produced during build",
      "properties": {
        "created": {
          "type": "array",
          "items": { "$ref": "#/$defs/artifact" }
        },
        "modified": {
          "type": "array",
          "items": { "$ref": "#/$defs/artifact" }
        },
        "deleted": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "step_id", "deleted_at"],
            "properties": {
              "path": { "type": "string" },
              "step_id": { "type": "string" },
              "deleted_at": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    },

    "checkpoints": {
      "type": "array",
      "description": "Checkpoints reached during execution",
      "items": {
        "type": "object",
        "required": ["name", "after_step", "status", "reached_at"],
        "properties": {
          "name": { "type": "string" },
          "after_step": { "type": "string" },
          "status": { "type": "string", "enum": ["passed", "failed"] },
          "reached_at": { "type": "string", "format": "date-time" },
          "verifications": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "criterion": { "type": "string" },
                "passed": { "type": "boolean" },
                "evidence": { "type": "string" }
              }
            }
          }
        }
      }
    },

    "timestamps": {
      "type": "object",
      "required": ["created_at", "updated_at"],
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "started_at": { "type": ["string", "null"], "format": "date-time" },
        "completed_at": { "type": ["string", "null"], "format": "date-time" },
        "paused_at": { "type": ["string", "null"], "format": "date-time" }
      }
    },

    "embedded_context_hash": {
      "type": ["string", "null"],
      "description": "Hash of embedded context from plan for resume fidelity verification"
    }
  },

  "$defs": {
    "executedStep": {
      "type": "object",
      "required": ["id", "name", "status", "micro_actions", "validations"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^step_[0-9]+[a-z]?$"
        },
        "name": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "failed", "skipped"]
        },
        "depends_on": {
          "type": "array",
          "items": { "type": "string" }
        },
        "started_at": { "type": ["string", "null"], "format": "date-time" },
        "completed_at": { "type": ["string", "null"], "format": "date-time" },
        "duration_ms": { "type": ["integer", "null"] },

        "micro_actions": {
          "type": "array",
          "description": "Detailed execution status per micro-action",
          "items": { "$ref": "#/$defs/executedMicroAction" }
        },

        "validations": {
          "type": "array",
          "description": "Success criteria validation results",
          "items": { "$ref": "#/$defs/validationResult" }
        },

        "retry_history": {
          "type": "array",
          "description": "All retry attempts for this step",
          "items": {
            "type": "object",
            "required": ["attempt", "timestamp", "outcome"],
            "properties": {
              "attempt": { "type": "integer", "minimum": 1 },
              "timestamp": { "type": "string", "format": "date-time" },
              "outcome": { "type": "string", "enum": ["success", "failed"] },
              "error": { "type": "string" },
              "fix_applied": { "type": "string" }
            }
          }
        },

        "artifacts_produced": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Paths of artifacts produced by this step"
        },

        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["message", "timestamp"],
            "properties": {
              "message": { "type": "string" },
              "type": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" },
              "recoverable": { "type": "boolean" },
              "recovery_attempted": { "type": "boolean" },
              "recovery_outcome": { "type": "string" },
              "stack": { "type": "string" }
            }
          }
        },

        "observations": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Notable observations during step execution"
        },

        "skip_reason": { "type": ["string", "null"] }
      }
    },

    "executedMicroAction": {
      "type": "object",
      "required": ["sequence", "tool", "purpose", "status"],
      "properties": {
        "sequence": {
          "type": "integer",
          "minimum": 1,
          "description": "Execution order within step"
        },
        "tool": {
          "type": "string",
          "enum": ["Write", "Edit", "Bash", "Read", "Glob", "Grep"]
        },
        "purpose": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "failed", "skipped"]
        },
        "started_at": { "type": ["string", "null"], "format": "date-time" },
        "completed_at": { "type": ["string", "null"], "format": "date-time" },
        "duration_ms": { "type": ["integer", "null"] },

        "input": {
          "type": "object",
          "description": "Sanitized input parameters",
          "properties": {
            "command": { "type": "string" },
            "file_path": { "type": "string" },
            "content_preview": { "type": "string", "maxLength": 500 }
          }
        },

        "output": {
          "type": "object",
          "description": "Execution result",
          "properties": {
            "success": { "type": "boolean" },
            "result_preview": { "type": "string", "maxLength": 500 },
            "exit_code": { "type": ["integer", "null"] },
            "error_message": { "type": ["string", "null"] }
          }
        }
      }
    },

    "validationResult": {
      "type": "object",
      "required": ["criterion", "status"],
      "properties": {
        "criterion": { "type": "string" },
        "validation_command": { "type": "string" },
        "expected_output": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["pending", "passed", "failed", "skipped"]
        },
        "actual_output": { "type": ["string", "null"] },
        "executed_at": { "type": ["string", "null"], "format": "date-time" },
        "on_failure_action": {
          "type": "string",
          "enum": ["retry", "skip", "halt"]
        }
      }
    },

    "artifact": {
      "type": "object",
      "required": ["path", "step_id", "timestamp"],
      "properties": {
        "path": { "type": "string" },
        "step_id": { "type": "string" },
        "micro_action_sequence": { "type": "integer" },
        "timestamp": { "type": "string", "format": "date-time" },
        "size_bytes": { "type": "integer" },
        "checksum": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" }
      }
    }
  }
}
